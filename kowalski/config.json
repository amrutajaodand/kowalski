{
  "server": {
    "logo": "Kowalski",
    "environment": "production",
    "host": "0.0.0.0",
    "port": "4000"
  },

  "path": {
    "path_app": "/app",
    "path_docs": "/app/doc/",
    "path_logs": "/data/logs/",
    "path_data": "/data/",
    "path_alerts": "/data/alerts/",
    "path_tmp": "/data/_tmp/"
  },

  "database": {
    "host": "kowalski-mongo",
    "port": 27017,
    "db": "kowalski",
    "collection_users": "users",
    "collection_queries": "queries",
    "collection_stats": "stats"
  },

  "kafka": {
    "default.topic.config": {
      "auto.offset.reset": "earliest"
    },
    "group": "kowalski.caltech.edu"
  },

  "kafka-topics": {
      "cmd": "/kafka_2.11-1.1.0/bin/kafka-topics.sh"
    },

  "misc": {
    "query_expiration_interval": 30,
    "logging_level": "debug"
  }
}