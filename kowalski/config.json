{
  "server": {
    "logo": "Kowalski",
    "environment": "production",
    "host": "0.0.0.0",
    "port": "4000"
  },

  "path": {
    "path_app": "/app",
    "path_docs": "/app/doc/",
    "path_logs": "/app/logs/",
    "path_ml_models": "/app/models/",
    "path_data": "/data/",
    "path_alerts": "/_tmp/ztf_alerts/",
    "path_queries": "/data/queries/",
    "path_tmp": "/_tmp/"
  },

  "database": {
    "host": "kowalski_mongo_1",
    "port": 27017,
    "db": "kowalski",
    "collection_users": "users",
    "collection_queries": "queries",
    "collection_stats": "stats"
  },

  "kafka": {
    "default.topic.config": {
      "auto.offset.reset": "earliest"
    },
    "group": "kowalski.caltech.edu"
  },

  "kafka-topics": {
      "cmd": "/kafka_2.11-2.2.0/bin/kafka-topics.sh"
    },

  "ml_models": {
    "braai": {
      "version":  "d6_m9"
    }
  },

  "misc": {
    "supported_penquins_versions": ["1.0.0", "1.0.1", "1.0.2", "1.1.0", "1.2.0"],
    "query_expiration_interval": 5,
    "logging_level": "debug"
  }
}