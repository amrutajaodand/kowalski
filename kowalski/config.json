{
  "server": {
    "logo": "Kowalski",
    "environment": "production",
    "host": "0.0.0.0",
    "port": "4000"
  },

  "path": {
    "path_app": "/app",
    "path_docs": "/app/doc/",
    "path_logs": "/app/logs/",
    "path_ml_models": "/app/models/",
    "path_data": "/data/",
    "path_alerts": "/_tmp/ztf_alerts/",
    "path_queries": "/data/queries/",
    "path_tess": "/data/tess",
    "path_tmp": "/_tmp/"
  },

  "database": {
    "host": "kowalski_mongo_1",
    "port": 27017,
    "db": "kowalski",
    "collection_users": "users",
    "collection_queries": "queries",
    "collection_stats": "stats"
  },

  "kafka": {
    "default.topic.config": {
      "auto.offset.reset": "earliest"
    },
    "group": "kowalski.caltech.edu"
  },

  "kafka-topics": {
      "cmd": "/kafka_2.11-2.2.0/bin/kafka-topics.sh"
    },

  "ml_models": {
    "braai": {
      "version":  "d6_m9"
    }
  },

  "xmatch": {
    "cone_search_radius": 5,
    "cone_search_unit": "arcsec",
    "catalogs": {
      "2MASS_PSC": {
        "filter": {},
        "projection": {
          "_id": 1,
          "coordinates.radec_str": 1,
          "j_m": 1,
          "h_m": 1,
          "k_m": 1
        }
      },

      "AllWISE": {
        "filter": {},
        "projection": {
          "_id": 1,
          "coordinates.radec_str": 1,
          "w1mpro": 1,
          "w1sigmpro": 1,
          "w2mpro": 1,
          "w2sigmpro": 1,
          "w3mpro": 1,
          "w3sigmpro": 1,
          "w4mpro": 1,
          "w4sigmpro": 1,
          "ph_qual": 1
        }
      },

      "IPHAS_DR2": {
        "filter": {},
        "projection": {
          "_id": 0,
          "name": 1,
          "coordinates.radec_str": 1,
          "r": 1,
          "rErr": 1,
          "i": 1,
          "iErr": 1,
          "ha": 1,
          "haErr": 1
        }
      },

      "Gaia_DR2": {
        "filter": {},
        "projection": {
          "_id": 1,
          "coordinates.radec_str": 1,
          "parallax": 1,
          "parallax_error": 1,
          "phot_g_mean_mag": 1,
          "phot_bp_mean_mag": 1,
          "phot_rp_mean_mag": 1
        }
      }
    }
  },

  "misc": {
    "supported_penquins_versions": ["1.0.0", "1.0.1", "1.0.2", "1.1.0", "1.2.0"],
    "query_expiration_interval": 5,
    "max_time_ms": 86400000,
    "logging_level": "debug"
  }
}